generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id          String @id @default(uuid())
  title       String
  description String @db.VarChar(1024)
  price       Float
  image       String
  stock       Int
  type        String
}

model purchase {
  id         String   @id @default(uuid())
  product_id String
  user_id    String
  quantity   Int
  total      Float
  created_at DateTime @default(now())
}

model user {
  id         String   @id @default(uuid())
  name       String
  email      String
  username   String
  password   String
  created_at DateTime @default(now())
}

model tokens{
  id         String   @id @default(uuid())
  user_id    String
  value      String
  created_at DateTime @default(now())
}
